{% block media_widget %}
    <div class="lm-field_single_media{{ (form.vars.data) ? ' is-active' : '' }}"  data-multiple="false">
        <input type="hidden" name="{{ form.vars.full_name }}" value="{{ form.vars.value }}" class="lm-field_single_media__input">
        <div class="lm-field_single_media__wrapper">
            <div class="lm-field_single_media__preview">
                {% if(form.vars.data) %}
                    <img src="/{{ form.vars.data.getThumbnail() }}" class="lm-field_single_media__image">
                {% endif %}
            </div>

            <div class="lm-field_single_media__actions">
                <button type="button" class="btn lm-field_single_media__action lm-field_single_media__action--select">Choice file</button>
                <button type="button" class="btn btn-danger lm-field_single_media__action lm-field_single_media__action--delete"><i class="fa-solid fa-trash-can"></i></button>
            </div>
        </div>
    </div>
{% endblock %}